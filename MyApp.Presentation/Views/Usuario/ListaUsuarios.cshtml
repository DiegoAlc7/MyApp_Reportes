@model IEnumerable<MyApp.Entities.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="row mt-5">
    <div class="col">
        <h3 class="mb-4">Lista de Usuarios</h3>
        <a href="/Usuario/Registrar" class="btn btn-success mb-3">Registrar Usuario</a>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Rol.Nombre</td>
                        <td>
                            <a href="/Usuario/AsignarRol?usuarioId=@usuario.Id&rolId=1" class="btn btn-sm btn-primary">Hacer Administrador</a>
                            <a href="/Usuario/AsignarRol?usuarioId=@usuario.Id&rolId=2" class="btn btn-sm btn-secondary">Hacer Operador</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>