@{
    ViewData["Title"] = "Iniciar Sesión";
}

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #e74c3c;
        --text-light: #ffffff;
        --input-bg: #ecf0f1;
    }

    body {
        background-color: var(--primary-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        margin-top: 6rem;
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .login-header h2 {
            color: var(--text-light);
            font-weight: 700;
        }

        .login-header h5 {
            color: #d0d6db;
            font-weight: 400;
        }

    .card {
        background-color: #34495e;
        border: none;
        border-radius: 12px;
        color: var(--text-light);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-light);
    }

    .form-control {
        background-color: var(--input-bg);
        border: none;
        border-radius: 6px;
    }

        .form-control:focus {
            border: none;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.4);
        }

    .input-group-text {
        background-color: transparent;
        border: none;
        cursor: pointer;
        color: rgba(255, 255, 255, 0.7); /* icono visible */
        font-size: 1.2rem;
    }

    .btn-login {
        background-color: var(--secondary-color);
        border: none;
        font-weight: 600;
        padding: 0.6rem;
    }

        .btn-login:hover {
            background-color: var(--accent-color);
        }

    .alert-danger {
        background-color: var(--accent-color);
        color: white;
        border: none;
        margin-top: 1rem;
    }
</style>

<div class="row justify-content-center login-container">
    <div class="col-md-5">
        <div class="login-header">
            <h2>Sistema de Inventario</h2>
            <h5>Inicia sesión para continuar</h5>
        </div>
        <div class="card p-4">
            <div class="card-body">
                <form method="post" action="/Login/Login">
                    <!-- EMAIL -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="usuario@correo.com" required />
                    </div>

                    <!-- CONTRASEÑA -->
                    <div class="mb-3">
                        <label for="contraseña" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="contraseña" name="contraseña" placeholder="••••••••" required />
                            <span class="input-group-text" onclick="togglePassword()" title="Mostrar/Ocultar contraseña">
                                <i class="fas fa-eye" id="toggleIcon"></i>
                            </span>
                        </div>
                    </div>

                    <!-- BOTÓN -->
                    <button type="submit" class="btn btn-login w-100 mt-3">
                        <i class="fas fa-sign-in-alt me-2"></i> Iniciar Sesión
                    </button>

                    <!-- ERROR -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePassword() {
        const input = document.getElementById("contraseña");
        const icon = document.getElementById("toggleIcon");
        input.type = input.type === "password" ? "text" : "password";
        icon.classList.toggle("fa-eye");
        icon.classList.toggle("fa-eye-slash");
    }
</script>
